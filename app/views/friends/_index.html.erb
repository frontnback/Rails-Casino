<%= render 'friend_requests/index' %>

<% if @friends %>
  <% @friends.each do |friend| %>
    <div id="friend"><span id="friend-username"><%= friend.username %></span>
      <% if friend.online %>
        <span id="friend-online"> is online! </span>
        <%= link_to game_invite_path(friend_id: User.find(friend.id)), remote: true, method: :post do %>
          <button>Play Me</button>
        <% end %>
      <% end %>
        <%= link_to root_path, remote: true, method: :get do %>
          <button>Message</button>
        <% end %>
    </div>
  <% end %>
<% end %>