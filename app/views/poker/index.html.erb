<%= render 'messages/index' %>

<div class="poker-table">
  <div class="flop">
    <% $flop.hand.each do |c| %>
      <%= image_tag c.avatar_file_name %>
    <% end %>
    <%= $flop.evaluate %>
  </div>
  <% [$player1, $player2, $player3, $player4, $player5, $player6, $player7, $player8].each do |p| %>
    <div class="poker-hand">
      <% p.hand.hand.each do |c| %>
        <%= image_tag c.avatar_file_name %>
      <% end %>
    </div>
  <% end %>
</div>