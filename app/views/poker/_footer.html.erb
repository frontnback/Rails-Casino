<% if !@current_user_turn %>

<div class="footer-wrap" id="poker-footer-wrap" style="visibility: hidden">
  <div class="button-area-left">
      <%= link_to bet_path, remote:true, id: 'bet', method: :post do %>
        <button>Bet</button>
      <% end %>
      <%= link_to call_path, remote:true, id: 'call', method: :post do %>
        <button>Call</button>
      <% end %>
      <div class="play-again">
        <%= link_to home_index_path, remote: true, method: :get do %>
          <button>Fold</button>
        <% end %>
      </div>
  </div>
    <div class="wager-buttons">
      <%= button_to "1", bet_path, name: 'bet', value: 1, remote: true %>
      <%= button_to "5", bet_path, name: 'bet', value: 5, remote: true %>
      <%= button_to "20", bet_path, name: 'bet', value: 20, remote: true %>
      <%= button_to "50", bet_path, name: 'bet', value: 50, remote: true %>
      <%= button_to "100", bet_path, name: 'bet', value: 100, remote: true %>
      <%= button_to "250", bet_path, name: 'bet', value: 250, remote: true %>
      <%= button_to "500", bet_path, name: 'bet', value: 500, remote: true %>
      <%= button_to "1000", bet_path, name: 'bet', value: 1000, remote: true %>
    </div>
  <div class="result">
    <p id="wager">Current Wager: <span id="current-wager"><%= $wager %></span></p>
    <h2 id="message">
      <span id="flash-msg"><%= flash[:success] %></span>
    </h2>
  </div>
</div>

